<html>
  <head>
    <title>World Vision</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  </head>
  <body style="font-family: sans-serif;">
    <h1>World Vision Voulenteers</h1>
    
    <!-- show letters -->
    <!-- total = <%=@letters.length%> rows -->
    <table border="1">
    <tr>
      <th>上傳日期</th>
      <th>國家</th>
      <th>信種</th>
      <th>備註</th>
      <th>封數</th>
      <th>狀態</th>
      <th>領取日期</th>
      <th>應返日期</th>
      <th>待譯信件</th>
      <th>操作</th>
    </tr>
    

    <% @letters.each do |letter| %>
    <tr>
        <td style="display:none"><input name="id" value="<%= letter.id %>"></input></td>
        <td><%=h letter.create_date%></td>
        <!-- <td><%=h letter.employee_id%></td> -->
        <td><%=h letter.country%><br/></td>
        <td><%=h letter.type%>  <br/></td>
        <td><textarea name="note" rows="3" readonly="readonly"><%=h letter.note%></textarea></td>
        <td><%=letter.number_of_letters%></input>
        <td><%=h letter.status%></td>
        <td><%=h letter.claim_date%></td>
        <td><%=h letter.due_date%></td>
        <td><a href="/file_download?id=<%=letter.id%>"><%=h letter.upload_file_url%></a></td>
        <td>
          <form action="/claim_letter" method="post">
                <input style="display:none" name="id" value="<%= letter.id %>"></input>
                  <input type="submit" value="Claim">
          </form>
          <form action="/return_file_upload?id=<%= letter.id %>" enctype="multipart/form-data" method="post">
                Upload:<input type="file" name="upload_file" size="10">
                <input type="submit" value="Send">
          </form>
        </td>
      </tr>
      <% end %>
    </table>
    
    <!-- end -->
    
    <!-- file upload   -->
    <!-- <h3>File Upload</h3> -->
    
    <!-- end -->

    <div style="position: absolute; bottom: 20px; right: 20px;">
    <img src="/images/appengine.gif"></div>
  </body>
</html>